# Order QR Mobile - Configuración de Entorno
# Copia este archivo a .env y configura tus valores

# ============================================
# CONFIGURACIÓN DEL BACKEND
# ============================================

# URL base del backend Laravel
# Para desarrollo local con emulador Android, usa: http://10.0.2.2:8000/api/v1
# Para desarrollo local con dispositivo físico, usa tu IP local: http://192.168.1.XXX:8000/api/v1
# Para ngrok, usa: https://tu-subdominio.ngrok-free.app/api/v1
# Para producción, usa: https://api.tudominio.com/api/v1
API_BASE_URL=http://10.0.2.2:8000/api/v1

# ============================================
# FIREBASE CONFIGURACIÓN
# ============================================

# Project ID de Firebase
FIREBASE_PROJECT_ID=order-qr-system

# API Key de Firebase (Android)
FIREBASE_API_KEY_ANDROID=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# API Key de Firebase (iOS)
FIREBASE_API_KEY_IOS=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Sender ID para Cloud Messaging
FIREBASE_SENDER_ID=123456789012

# App ID (Android)
FIREBASE_APP_ID_ANDROID=1:123456789012:android:abcdef1234567890

# App ID (iOS)
FIREBASE_APP_ID_IOS=1:123456789012:ios:abcdef1234567890

# ============================================
# CONFIGURACIÓN DE LA APP
# ============================================

# Nombre de la aplicación
APP_NAME=Order QR

# Versión de la app
APP_VERSION=1.0.0

# Build number
BUILD_NUMBER=1

# Entorno (development, staging, production)
ENVIRONMENT=development

# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ============================================

# Habilitar notificaciones locales
ENABLE_LOCAL_NOTIFICATIONS=true

# Habilitar notificaciones push
ENABLE_PUSH_NOTIFICATIONS=true

# Canal de notificaciones Android
NOTIFICATION_CHANNEL_ID=order_updates
NOTIFICATION_CHANNEL_NAME=Order Updates

# ============================================
# BASE DE DATOS LOCAL
# ============================================

# Nombre de la base de datos SQLite
DB_NAME=order_qr.db

# Versión de la base de datos
DB_VERSION=1

# ============================================
# CONFIGURACIÓN DE QR
# ============================================

# Timeout para escaneo de QR (en segundos)
QR_SCAN_TIMEOUT=60

# Vibración al escanear (true/false)
QR_VIBRATE_ON_SCAN=true

# ============================================
# CONFIGURACIÓN DE RED
# ============================================

# Timeout de conexión (en segundos)
CONNECTION_TIMEOUT=30

# Timeout de recepción (en segundos)
RECEIVE_TIMEOUT=30

# Reintentos máximos
MAX_RETRIES=3

# Rate limiting - máximo de requests por minuto
MAX_REQUESTS_PER_MINUTE=60

# ============================================
# ANALYTICS Y LOGGING
# ============================================

# Habilitar analytics
ENABLE_ANALYTICS=false

# Habilitar crash reporting
ENABLE_CRASH_REPORTING=false

# Nivel de logging (debug, info, warning, error)
LOG_LEVEL=debug

# ============================================
# FEATURES FLAGS
# ============================================

# Habilitar modo offline
ENABLE_OFFLINE_MODE=true

# Habilitar sincronización automática
ENABLE_AUTO_SYNC=true

# Intervalo de sincronización (en segundos)
SYNC_INTERVAL=30

# Habilitar modo oscuro (próximamente)
ENABLE_DARK_MODE=false

# Habilitar multi-idioma (próximamente)
ENABLE_MULTI_LANGUAGE=false

# ============================================
# NOTAS
# ============================================

# IMPORTANTE:
# - NO compartas este archivo con valores reales en repositorios públicos
# - Los archivos Firebase (google-services.json, GoogleService-Info.plist)
#   ya están excluidos en .gitignore
# - Para producción, usa variables de entorno seguras
# - Revisa regularmente las credenciales y rota si es necesario
